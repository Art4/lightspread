{
  "name": "LightSpread",
  "version": "1.0.0-beta.2",
  "description": "Present your pictures in an audience friendly way",
  "main": "main.js",
  "scripts": {
    "build": "electron-builder",
    "deploy": "webpack -p --config webpack.config.js && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "publish": "webpack -p --config webpack.config.js && electron-builder -p always",
    "start": "env ELECTRON_IS_DEV=1 electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "webpack -d --watch --config webpack.config.js",
    "webpack": "webpack -d --config webpack.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Art4/lightspread.git"
  },
  "author": "Artur Weigandt",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/Art4/lightspread/issues"
  },
  "homepage": "https://github.com/Art4/lightspread#readme",
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.5.0",
    "autoprefixer": "^9.3.1",
    "bootstrap": "^4.1.3",
    "css-loader": "^1.0.1",
    "electron": "^3.0.7",
    "electron-builder": "^20.33.2",
    "file-loader": "^2.0.0",
    "jquery": "^3.3.1",
    "lightgallery": "^1.6.11",
    "mini-css-extract-plugin": "^0.4.4",
    "node-sass": "^4.9.4",
    "postcss-loader": "^3.0.0",
    "precss": "^3.1.2",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.25.0",
    "webpack-cli": "^3.1.2"
  },
  "dependencies": {
    "express": "^4.16.4",
    "sharp": "^0.21.0"
  },
  "build": {
    "appId": "org.electron.lightspread",
    "win": {
      "icon": "img/lightspread-256.png"
    },
    "nsis": {
      "oneClick": true,
      "artifactName": "${productName} ${version}.${ext}",
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "publish": {
        "provider": "github",
        "private": false
      }
    }
  }
}
